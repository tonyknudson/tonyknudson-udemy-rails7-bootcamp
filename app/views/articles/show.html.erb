<%= render "article", article: @article %>

<%= link_to "HomePage", root_path %>
<h2>New Comment</h2>
<%= form_with model: [@article, @article.comments.build] do |f| %>
    <%= f.text_area :body %>
    <%= f.submit %>
<% end %>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
    <p><%= comment.body %></p>
<% end %>